
  <!--================Reservation section start =================-->  
  <section class="bg-lightGray section-padding">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-6 col-xl-5 mb-4 mb-md-0">
          <div class="section-intro">
            <h4 class="intro-title">{% trans %}book.title{% endtrans %}</h4>
            <h2 class="mb-3">{% trans %}book.subtitle{% endtrans %}</h2>
          </div>
          <p>{% trans %}book.text{% endtrans %}</p>
        </div>
        <div class="col-md-6 offset-xl-2 col-xl-5">
          <div class="bookform-wrapper" style="background-image: url({{asset('img/home/reservation-bg.png')}})">
            <h3>{% trans %}book.form.book_table{% endtrans %}</h3>

            <form class="bookform-form" action="#">
              <div class="form-group">
                <div class="input-group">
                  <input type="text" class="form-control" placeholder="{% trans %}book.form.name{% endtrans %}" required>
                  <div class="input-group-append">
                    <span class="input-group-text"><i class="ti-user"></i></span>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <input type="email" class="form-control" placeholder="{% trans %}book.form.email{% endtrans %}" required>
                  <div class="input-group-append">
                    <span class="input-group-text"><i class="ti-email"></i></span>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <input type="text" class="form-control" placeholder="{% trans %}book.form.phone_number{% endtrans %}">
                  <div class="input-group-append">
                    <span class="input-group-text"><i class="ti-headphone-alt"></i></span>
                  </div>
                </div>
              </div>

              <div class="row datetime-inputs">
                <div class="form-group col-md-6">
                    <div class="input-group">
                      <input type="date" class="form-control" placeholder="{% trans %}book.form.select_date{% endtrans %}" 
                      min="{{ 'now + 12 hours' | date('Y-m-d') }}" max="{{ 'today + 45 days' | date('Y-m-d') }}"  required>
                      <div class="input-group-append">
                        <span class="input-group-text"><i class="ti-notepad"></i></span>
                      </div>
                    </div>
                  </div>
                  <div class="form-group col-md-6">
                    <div class="input-group">
                      <input type="time" class="form-control" placeholder="{% trans %}book.form.select_time{% endtrans %}" required>
                      <div class="input-group-append">
                        <span class="input-group-text"><i class="ti-notepad"></i></span>
                      </div>
                    </div>
                  </div>
              </div>
              

              <div class="form-group">
                <div class="input-group">
                  <input type="number" class="form-control" placeholder="{% trans %}book.form.select_people{% endtrans %}" required max=40 min=1 >
                  <div class="input-group-append">
                    <span class="input-group-text"><i class="ti-layout-column3"></i></span>
                  </div>
                </div>
              </div>
              <div class="form-group form-group-position">
                <button class="button border-0" type="submit">{% trans %}cta.book_now.send{% endtrans %}</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!--================Reservation section end =================-->  
