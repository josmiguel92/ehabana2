
<!--================Hero Banner Section start =================-->
<section class="hero-banner">
    <div class="hero-wrapper">
        <div class="hero-left">
            <h1 class="hero-title">{{ text.tituloPrincipal(_locale)}}
                <br>
                <small>{{ text.subtituloPrincipal(_locale) }}</small> </h1>
            <div class="d-sm-flex flex-wrap">
                <a class="button button-hero button-shadow" href="#booking">{% trans %}cta.book_now{% endtrans %}</a>
                <a class="hero-banner__video" href="{{ text.videoLink }}">
                    <img src="{{ asset('img/icons/play.png') }}" alt="{% trans %}hero.see_video{% endtrans %}">
                    {% trans %}hero.see_video{% endtrans %}
                </a>
            </div>
            <ul class="hero-info d-none d-lg-block">
                {#<li>#}
                    {#<img src="img/banner/fas-service-icon.png" alt="">#}
                    {#<h4>Fast Service</h4>#}
                {#</li>#}
                {#<li>#}
                    {#<img src="img/banner/fresh-food-icon.png" alt="">#}
                    {#<h4>Fresh Food</h4>#}
                {#</li>#}
                {#<li>#}
                    {#<img src="img/banner/support-icon.png" alt="">#}
                    {#<h4>24/7 Support</h4>#}
                {#</li>#}
            </ul>
        </div>
        <div class="hero-right">
            <div class="owl-carousel owl-theme hero-carousel">

              {% for image in images %}
            	  <div class="hero-carousel-item animated-img-container">
                    <img class="img-fluid" src="{{ asset(image.imagePath)}}" alt="" style="max-height: 85vh;width: auto;">
                    <a class="button button-hero button-shadow" href="{{ asset(image.imagePath)}}">+</a>
                </div>
              {% endfor %}

            </div>
        </div>
        <ul class="social-icons d-none d-lg-block">
            <li>
                <a href="https://www.facebook.com/ElizaldeHabana/" target="_blank">
                    {{ source('svg/facebook.svg') }}
                </a>
            </li>
            <li>
                <a href="http://www.tripadvisor.com/Restaurant_Review-d12580283" target="_blank">
                    {{ source('svg/tripadvisor.svg') }}
                </a>
            </li>
            <li>
                {# TODO: LINK To instagram#}
                <a href="https://instagram.com/elizaldehabana/">
                        {{ source('svg/instagram.svg') }}
                </a>
            </li>
            <li>
                <a href="mailto:elizaldebarrestaurante@gmail.com">
                        {{ source('svg/mail.svg') }}
                </a>
            </li>

        </ul>
        {{ source('svg/wave01.svg') }}
        {{ source('svg/wave02.svg') }}
        <style type="text/css">
        	.section-wave.hero-wave{position: absolute;bottom: 0;width: 100%;left: 0;z-index: -1}
        </style>
    </div>
</section>
<!--================Hero Banner Section end =================-->
